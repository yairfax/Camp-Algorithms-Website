<h1>Enter Session Information</h1>
<p><b>NOTE:</b> If you enter a session that was already entered, this will <b>overwrite</b> that data.</p>
<form action="/chugim/klugie/newsession" method="POST">
	<div class="form-row">
		<div class="form-group col-md-3">
			<label for="year">Year</label>
			<input class="form-control" type="number" id="year" name="year" min="2000" max="3000" value="2000" required></input>
		</div>
		<div class="form-group col-md-3">
			<label for="session">Session</label>
			<div class="form-check">
				<input class="form-check-input" type='radio' name="session" value="i" required>First</input>
			</div>
			<div class="form-check">
				<input class="form-check-input" type='radio' name="session" value="ii" required>Second</input>
			</div>
		</div>
	</div>
	<h2>Bunks</h2>
	<div class="form-row">
		{{#each eidot}}
		<div class="col-md-2" style="text-align: center">
			<label>{{this}}</label>
			<div class="form-group">
				<input class="form-control {{this}}" type="text" name="{{this}}" required>
			</div>
			<div class="form-group">
				<input class="form-control {{this}}" type="text" name="{{this}}" required>
			</div>
			<div class="form-group">
				<input class="form-control {{this}}" type="text" name="{{this}}" required>
			</div>
			<div class="form-group">
				<input class="form-control {{this}}" type="text" name="{{this}}" required>
			</div>
		</div>
		{{/each}}
	</div>
	<h2>Chugim</h2>
	<p>Please enter the chug name, its popularity as a number between 0 and 1, and its capacity</p>
	<div id="chug-container"></div>
	<div id="button-container" style="padding-bottom: 25px">
		<button type="button" class="btn btn-primary" id="add-chug">Add Chug</button>
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
</form>

<script>
	var chugAdd =
		`<div class="form-row">
			<div class="form-group col-md-4">
				<input class="form-control" type="text" placeholder="Chug Name" name="name" required></input>
			</div>
			<div class="form-group col-md-2">
				<input class="form-control" type="number" step=".1" min="0" max="1" name="popularity" placeholder="Popularity" required></input>
			</div>
			<div class="form-group col-md-2">
				<input class="form-control" type="number" min="0" max="100" name="capacity" placeholder="Capacity" required></input>
			</div>
			<button type="button" id="delete" class="btn btn-danger delete-chug" style="height: 37px">-</button>
		</div>`;
	
	$("#add-chug").on('click', function() {
		$("#chug-container").append(chugAdd);
		$(".delete-chug").on("click", function(event) {
			$(this).parent().remove();
		});
	});
</script>